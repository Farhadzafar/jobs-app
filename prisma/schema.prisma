generator client {
  provider = "prisma-client-js"
}

datasource db {
 provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Job {
  id                Int      @id @default(autoincrement())
  logo              String?  
  title             String
  company           String
  type              String?
  salary            String?
  tags              String?
  description       String?  
  companyInfo       String?  
  companyWebsite    String?
  companyEmail      String?
  companyLinks     String? 
  jobApplyDescription      String?  
  team              String?  
  experience        String?  
  startDate         DateTime? 
  closingDate       DateTime? 
  location          String?    
  remote            Boolean?   

  createdAt         DateTime  @default(now())
  updatedAt         DateTime?  @updatedAt
}
